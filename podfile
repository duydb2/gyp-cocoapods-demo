platform :ios, '7.0'

xcodeproj 'app.xcodeproj'


target :debug do
	
	pod 'ObjectiveSugar', '~> 0.5'
	pod 'AFNetworking', '~> 2.0'

end

post_install do |installer|
	
	puts "POST INSTALL:"
	
	# can create schemes here for build for each element ...
	installer.project.targets.each do |target|
		
		puts "#{target.name}"		

	end
	
end

